{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "g++",
    "args": [
        "-g", 
        "-std=c++11", 
        "${workspaceFolder}\\lib\\*.cpp", 
        "-o", 
        "${fileBasenameNoExtension}.o",  
        "-I", "D:\\OpenCV\\opencv\\build\\include",
        "-I", "D:\\OpenCV\\opencv\\build\\include\\opencv2",
        "-L", "D:\\OpenCV\\opencv\\build\\x64\\MinGW\\lib",
        "-l", "opencv_core455",
        "-l", "opencv_imgproc455",
        "-l", "opencv_imgcodecs455",
        "-l", "opencv_video455",
        "-l", "opencv_ml455",
        "-l", "opencv_highgui455",
        "-l", "opencv_objdetect455",
        "-l", "opencv_flann455",
        "-l", "opencv_imgcodecs455",
        "-l", "opencv_photo455",
        "-l", "opencv_videoio455",
        "-l", "opencv_calib3d455"
  
    ],// 编译命令参数
    "problemMatcher":{
        "owner": "cpp",
        "fileLocation":[
            "relative",
            "${workspaceFolder}"
        ],
        "pattern":[
            {
                "regexp": "^([^\\\\s].*)\\\\((\\\\d+,\\\\d+)\\\\):\\\\s*(.*)$",
                "file": 1,
                "location": 2,
                "message": 3
            }
        ]
    },
    "group": {
        "kind": "build",
        "isDefault": true
    }
  }
  