{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "g++",
    "args": [
        "-g", 
        "-std=c++11", 
        "${workspaceFolder}\\lib\\*.cpp", 
        "-o", 
        "${fileBasenameNoExtension}.o", 
        "-I", "F:\\Opencv\\opencv-4.5.4\\build\\include",
        "-I", "F:\\Opencv\\opencv-4.5.4\\build\\include\\opencv2",
        "-L", "F:\\Opencv\\opencv-4.5.4\\build\\x64\\MinGW\\lib",
        "-l", "opencv_core454",
        "-l", "opencv_imgproc454",
        "-l", "opencv_imgcodecs454",
        "-l", "opencv_video454",
        "-l", "opencv_ml454",
        "-l", "opencv_highgui454",
        "-l", "opencv_objdetect454",
        "-l", "opencv_flann454",
        "-l", "opencv_imgcodecs454",
        "-l", "opencv_photo454",
        "-l", "opencv_videoio454",
        "-l", "opencv_calib3d454"
  
    ],// 编译命令参数
    "problemMatcher":{
        "owner": "cpp",
        "fileLocation":[
            "relative",
            "${workspaceFolder}"
        ],
        "pattern":[
            {
                "regexp": "^([^\\\\s].*)\\\\((\\\\d+,\\\\d+)\\\\):\\\\s*(.*)$",
                "file": 1,
                "location": 2,
                "message": 3
            }
        ]
    },
    "group": {
        "kind": "build",
        "isDefault": true
    }
  }
  